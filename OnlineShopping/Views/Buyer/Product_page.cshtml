@model IEnumerable<OnlineShopping.Models.Product_Table>

@{
    ViewBag.Title = "Product_page";
    Layout = "~/Views/Shared/_BuyerLayout.cshtml";
}


<style>
    .card {
        box-shadow: 0 4px 8px 0 rgba(0,0,0,0.2);
        transition: 0.3s;
        width: 30%;
        border-radius: 5px;
        float:left;
        margin-left:15px;
        margin-top:15px;
    }

        .card:hover {
            box-shadow: 0 8px 16px 0 rgba(0,0,0,0.2);
        }

    img {
        border-radius: 5px 5px 0 0;
    }

    .container {
        padding: 2px 16px;
    }
</style>


   
@foreach (var item in Model)
{
    <div class="card">
        <div class="container">
            @Html.DisplayFor(modelItem => item.ProductName)
            <br />
            @Html.DisplayFor(modelItem => item.ProductPrice)
            <br />
            @Html.DisplayFor(modelItem => item.ProductDesc)
            <br />
            @Html.ActionLink("VIEW", "Edit", new { id=item.ProductId  })
        </div>
    </div>
}


